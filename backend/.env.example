# Database Configuration
DATABASE_HOST=db                          # Refers to the PostgreSQL service in Docker
DATABASE_PORT=5432                        # Default PostgreSQL port
DATABASE_NAME=pollnation_development      # Database name for development
DATABASE_USER=postgres                    # PostgreSQL username
DATABASE_PASSWORD=password                # PostgreSQL password

# Rails Environment
RAILS_ENV=development                     # Set Rails environment to development

# Devise Secret Key (or Rails secret key base)
SECRET_KEY_BASE=<your-generated-secret-key>  # Use `rails secret` to generate this key

# CORS Configuration
FRONTEND_URL=http://localhost:3001        # Allow requests from frontend URL